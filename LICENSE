import random
def play_game():
    you= input("Enter your choice (rock/paper/scissors): ")
    you=you.lower()
    computer= random.choice(['rock', 'paper', 'scissors'])
    print("You chose:", you)
    print("Computer chose:", computer)
    if you== computer:
        print("It's a tie!")
    elif you== 'rock':
        if computer== 'paper':
            print("You lose!")
        else:
            print("You win!")
    elif you== 'paper':
        if computer == 'scissors':
            print("You lose!")
        else:
            print("You win!")
    elif you== 'scissors':
        if computer== 'rock':
            print("You lose!")
        else:
            print("You win!")
    else:
        print("Invalid input. Please enter either rock, paper, or scissors.")
play_game()

